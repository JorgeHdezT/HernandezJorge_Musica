@model List<HernandezJorge_Musica.Models.Album>

@{
    ViewData["Title"] = "Discos del Artista";
}

<h1>Discos del Artista</h1>

<div>
    <ul>

        @if (Model.Count == 0 || Model == null)
        {
            <h3><i>No se encontraron albums para este artista.</i></h3>
        }
        else
        {
            foreach (var album in Model)
            {
                <li>@album.Title</li>
            }
        }
        
    </ul>
    
<div>

    <a asp-action="Index">Volver a la lista</a>
</div>