@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">La Discográfica</h1>
    <section class="SeccionesDiscografica">

        <div class="Elemento">
            <img src="/images/discos.jpg" alt="" />
            <h2>Albums</h2>
            <p>Consulta la colección de albums de nuestro catálogo.</p>
            <a class="nav-link text-dark" asp-area="" asp-controller="Albums" asp-action="Index">
                <div>Ver Albums</div>
            </a>
        </div>

        <div class="Elemento">
            <img src="/images/artistas.jpg" alt="" />
            <h2>Artistas</h2>
            <p>Conoce a los artistas más punteros del panorama musical</p>
            <a class="nav-link text-dark" asp-area="" asp-controller="Artists" asp-action="Index">
                <div>Ver Artistas</div>
            </a>
        </div>

        @* Algoritmo para mostrar estrellas: *@
        @* @{
            decimal Puntuacion = 3.5M;
            int PuntuacionTruncada = Convert.ToInt32(Math.Truncate(Puntuacion));

            <div style="Display: flex; flex-gap: 5px;">
                @if (Puntuacion == PuntuacionTruncada)
                {
                    for(int i = 0; i < Puntuacion; i++)
                    {
                        <img src="~/images/estrella.svg" style="width: 25px;">
                    }
                }
                else
                {
                    for(int i = 1; i <= PuntuacionTruncada; i++)
                    {
                        <img src="~/images/estrella.svg" style="width: 25px;">
                    }
                    <img src="~/images/mediaEstrella.svg" style="width: 25px;">
                }
            </div>
        } *@

    </section>
</div>
